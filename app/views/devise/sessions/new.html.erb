
<body class="login">
  <div class="container">
    <div class="content">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form' ) do |f| %>
        <h3 class="form-title">YumYum</h3>
        
        
          <div class="field">
            <%= f.email_field :email,  style: 'background-color: #FFF;height: 43px;color: #262626;border: solid 1px #dbdbdb;width: 100%; padding-left:10px', placeholder: 'Email'%>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", style: 'background-color: #FFF;height: 43px;
  color: #262626;border: solid 1px #dbdbdb;width: 100%; padding-left:10px', placeholder: 'Password' %>
          </div>

         
            <div class="field">
              
              
            </div>
          

          <div class="form-actions">
            <%= f.submit "Log in", class: 'btn btn-success uppercase', style: 'background-color: #6c7a8d; border: 0px'%>
            <% if devise_mapping.rememberable? -%>
              <label class="rememberme check">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, style: 'color: #6c7a8d' %>
              </label>
            <% end -%> 
            <a href="/users/password/new" id="forget-password" class="forget-password" style="margin-top: 15px; color: #6c7a8d">Forgot Password?</a>
          </div>            
          <div class="login-options">
            <h4>Or login with</h4>
            <ul style="float: right;">
              <li style="list-style: none;display: inline-block;margin-right: 10px">
                <a href=""><img src="/assets/facebook.png"></a>
              </li>
              <li style="list-style: none;display: inline-block;margin-right: 10px">
                <a href=""><img src="/assets/twitter.png"></a>
              </li>
              <li style="list-style: none;display: inline-block;margin-right: 10px">
                <a  href=""><img src="/assets/instagram.png"></a>
              </li>             
            </ul>
          </div>
          <div class="create-account">
            <p>
              <a href="/users/sign_up" id="register-btn" class="uppercase">Create an account</a>
            </p>
          </div>
      <% end %>
    </div>
  </div>  
</body>
  
